    "http-errors": "^1.7.3",
    "morgan": "^1.9.1",
    "nodemailer": "^6.2.1",
    "pg": "^7.12.1",
    "sequelize": "^5.21.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
